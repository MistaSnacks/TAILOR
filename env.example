# Supabase (for database and storage)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database SSL Configuration (for migration scripts)
# DATABASE_SSL_CA_PATH=/path/to/ca-certificate.crt  # Optional: Path to CA certificate file
# DATABASE_SSL_REJECT_UNAUTHORIZED=true              # Optional: Explicitly enable/disable cert verification (default: true in production, false in dev)

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Google OAuth (for NextAuth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Job Search APIs (JSearch via RapidAPI)
JSEARCH_ENABLED=false
JSEARCH_API_KEY=your_rapidapi_key_here
JSEARCH_HOST=jsearch.p.rapidapi.com
# Job Search APIs (Dev Only)
# LinkedIn RapidAPI - ONLY enable in development, not production-safe
LINKEDIN_RAPID_ENABLED=false
LINKEDIN_RAPID_API_KEY=your_rapidapi_key_here
LINKEDIN_RAPID_HOST=linkedin-job-search-api.p.rapidapi.com

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_STANDARD_MONTHLY=price_your_monthly_price_id
STRIPE_PRICE_STANDARD_QUARTERLY=price_your_quarterly_price_id
